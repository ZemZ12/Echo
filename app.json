{
  "expo": {
    "name": "EchoApp",
    "slug": "EchoApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain"
    },
    "NavigationBar": {
      "backgroundColor": "red"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#transparent","translucent": true
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
      "scheme": "EchoApp",
    "plugins": [
      "expo-font"
    ]
  }
}
